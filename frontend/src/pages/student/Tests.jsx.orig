
import React, { useEffect, useState } from 'react';
import { Link } from 'react-router-dom';
import { useAuthStore } from '../../utils/authStore';

export default function Tests() {
  const { accessToken } = useAuthStore.getState();
  const [data, setData] = useState({ upcoming: [], active: [], finished: [] });

  useEffect(() => {
    fetch(`${import.meta.env.VITE_API_BASE}/tests/student`, { headers: { Authorization: `Bearer ${accessToken}` } })
      .then(r => r.json()).then(setData).catch(()=>{});
  }, []);

  const Block = ({ title, items, cta }) => (
    <div className="card">
      <h3 className="text-xl font-semibold mb-2">{title}</h3>
      {items.length === 0 ? <div className="text-gray-500">None</div> : (
        <ul className="space-y-2">
          {items.map(t => (
            <li key={t._id} className="flex items-center justify-between border rounded p-2">
              <div>
                <div className="font-medium">{t.title}</div>
                <div className="text-sm text-gray-500">
                  {new Date(t.startDate).toLocaleString()} â†’ {new Date(t.endDate).toLocaleString()}
                </div>
              </div>
              {cta && <Link className="btn-primary" to={`/student/take/${t._id}`}>Take test</Link>}
            </li>
          ))}
        </ul>
      )}
    </div>
  );

  return (
    <div className="grid gap-6">
      <Block title="Active tests" items={data.active} cta />
      <Block title="Upcoming tests" items={data.upcoming} />
      <Block title="Finished tests" items={data.finished} />
    </div>
  );
}
